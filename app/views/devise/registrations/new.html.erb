<html>
	<head>
		<title>Cadastro</title>
		
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0">
		<link rel="stylesheet" href="assets/stylesheets/sky-forms.css">
		<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.css">

	</head>
	<body class="bg-cyan">
		<div class="body body-s">
		
			<%= form_for(resource, as: resource_name, :html => {class:"sky-form"}, url: registration_path(resource_name)) do |f| %>
			  <%= devise_error_messages! %>

				<header>Cadastro</header>
				
				<fieldset>					
					<section>
						<label class="input">
							<i class="icon-append icon-envelope-alt"></i>
							<%= f.email_field :email, autofocus: true, placeholder:"Endereço de e-mail"%>
							<b class="tooltip tooltip-bottom-right">É necessário verificar sua conta</b>
						</label>
					</section>
					
					<section>
						<label class="input">
							<i class="icon-append icon-lock"></i>
							<%= f.password_field :password, autocomplete: "off", placeholder:"Senha"%>
							<b class="tooltip tooltip-bottom-right">No mínimo 6 caracteres</b>
						</label>
					</section>
					
					<section>
						<label class="input">
							<i class="icon-append icon-lock"></i>
							<%= f.password_field :password_confirmation, autocomplete: "off", placeholder:"Confirmar Senha"%>
							<b class="tooltip tooltip-bottom-right">No mínimo 6 caracteres</b>
						</label>
					</section>
					
					<section>
						<div class="row">
							<div class="col col-12">
								<%- if devise_mapping.omniauthable? %>
									<%- resource_class.omniauth_providers.each do |provider| %>
										<%= link_to image_tag("/assets/login-face.png", size: "258x40", :alt => '', :title => ''), omniauth_authorize_path(resource_name, provider) %>
									<% end -%>
								<% end -%>
							</div>
						</div>
					</section>
				</fieldset>
					
				<footer>
					<button type="submit" class="button">Confirmar</button>
					<a href="/users/sign_in" class="button button-secondary">Já é cadastrado?</a>
					<%= devise_error_messages! %>
				</footer>
			<% end %>	
			</form>
			
		</div>
	</body>
</html>