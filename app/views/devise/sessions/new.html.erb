<html>
	<head>
		<title>Login</title>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0">
		<link rel="stylesheet" href="/assets/sky-forms.css">
		<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.css">
	
	</head>
	<body class="bg-cyan">
		<div class="body body-s">

			<form action="" class="sky-form" <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
										
				<header>Login</header>
				
				<fieldset>					
					<section>
						<div class="row">
							<div class="col col-12">
								<label class="input">
									<i class="icon-append icon-user"></i>
									 <%= f.email_field :email, autofocus: true, placeholder:"Email"%>
								</label>
							</div>
						</div>
					</section>
					
					<section>
						<div class="row">
							<div class="col col-12">
								<label class="input">
									<i class="icon-append icon-lock"></i>
									<%= f.password_field :password, autocomplete: "off", placeholder:"Senha"%>
								</label>
								<div><%= link_to "Esqueceu sua senha?", new_password_path(resource_name) %></div>
							</div>
						</div>
					</section>
					
					<section>
						<div class="row">
							<div class="col col-12">
								<%- if devise_mapping.omniauthable? %>
									<%- resource_class.omniauth_providers.each do |provider| %>
										<%= link_to image_tag("/assets/login-face.png", size: "254x40", :alt => '', :title => ''), omniauth_authorize_path(resource_name, provider) %>
									<% end -%>
								<% end -%>
							</div>
						</div>
					</section>
				</fieldset>
				<footer>
					<button type="f.submit" class="button">Login</button>
					<a href="/users/sign_up" class="button button-secondary">Cadastrar-se</a>
					<%= devise_error_messages! %>
				</footer>
			<% end %>
			</form>
			
		</div>
	</body>
</html>